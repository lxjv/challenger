---
import PageLayout from "@lay/PageLayout.astro";
import CollectionList from "@cmp/CollectionList.astro";
import PinnedPosts from "@cmp/PinnedPosts.astro";
import GoLink from "@cmp/links/GoLink.astro";

const pageTitle = "Blog";
const description =
    "I write about things sometimes. This is where I put most of it.";
---

<PageLayout pageTitle={pageTitle} description={description}>
    <GoLink go="/blog/t" displayText="Show tag list" />
    <span>
        <i class="fa-solid fa-rss"></i>
        <a href="/blog/feed.rss">Subscribe with RSS</a>
    </span>
    <h3>Pinned posts</h3>
    <PinnedPosts collection="blog" />
    <hr />
    <CollectionList collection="blog" />
</PageLayout>
