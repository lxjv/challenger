---
import { getCollection } from "astro:content";
import PageLayout from "@lay/PageLayout.astro";
const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post:any) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<PageLayout
    pageTitle={pageTitle}
    description="All the tags I've used on my blog"
    back="/blog"
    icon="fa-solid fa-signature"
>
    <ul class="fa-ul">
        {
            tags.map((tag) => (
                <li>
                    <i class="fa-li fa-solid fa-hashtag" />
                    <a href={`/blog/t/${tag}`}>{tag}</a>
                </li>
            ))
        }
    </ul>
</PageLayout>

<style>
    a {
        color: var(--accent);
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>
