---
import { getCollection } from "astro:content";
import PageLayout from "@lay/PageLayout.astro";
const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post:any) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<PageLayout
    pageTitle={pageTitle}
    description="All the tags I've used on my blog"
    back="/blog"
    icon="fa-solid fa-signature"
>
    <ul class="fa-ul">
        {
            tags.map((tag) => (
                <li>
                    <i class="fa-li fa-solid fa-hashtag" />
                    <a href={`/blog/t/${tag}`}>{tag}</a>
                </li>
            ))
        }
    </ul>
</PageLayout>
