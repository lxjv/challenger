---
import Navigation from "./partials/Navigation.astro";
import { siteConfig as sc } from "@lib/siteConfig";
---

<header>
    <h1>
        <a href="/">
            {sc.meta.title}
            <i
                class="fa-solid fa-fan fa-sm fa-spin"
                style="--fa-animation-duration: 30s;"></i>
        </a>
    </h1>
    <Navigation />
</header>

<style>
    header {
        margin: 1em 0 1.5em 0;
        display: flex;
        align-items: center;
        gap: var(--padding-def);
    }
    h1 {
        margin-top: 0;
    
    }

    a {
        text-decoration: none;
    }
</style>
