---
import { siteConfig as sc } from "@lib/siteConfig";
---

<div class="h-card">
    <p>
        <b><span class="p-name">{sc.author.name}</span></b>
        (<b><span class="p-pronouns">she/her</span></b>)
    </p>
    <img
        class="u-photo"
        src={sc.author.photo.url}
        alt={sc.author.photo.alt}
        width={sc.author.photo.size.w}
        height={sc.author.photo.size.h}
    />
    <p class="p-note nd">{sc.author.line}</p>
    <ul class="fa-ul">
        <li>
            <i class="fa-li fa-solid fa-globe"></i>
            ðŸ‡¬ðŸ‡§ England, UK
        </li>
        <li>
            <i class="fa-li fa-solid fa-cake-candles"></i>
            Age: <span class="p-age">18</span> <br>
            (<span class="p-birthday">2005-10-16</span>)
        </li>
        <li>
            <i class="fa-li fa-solid fa-truck-fast"></i>
            Links:
            <ul>
                <li class="nd">
                    <a href={sc.author.link} class="u-url" rel="me">
                        laker.tech
                    </a>
                </li>
                <li>
                    <i class="fa-li fa-solid fa-bread"></i>
                    <a href="//laker.lol" rel="me">laker.lol</a>
                </li>
                <li>
                    <i class="fa-li fa-solid fa-bread"></i>
                    <a href="//github.com/lxjv" rel="me">GitHub</a>
                </li>
                <li>
                    <i class="fa-li fa-solid fa-bread"></i>
                    <a href="//social.lol/@la" rel="me">@la@social.lol</a>
                </li>
            </ul>
        </li>
        <li>
            <i class="fa-li fa-solid fa-at"></i>
            <a href=`mailto:${sc.author.email}` class="u-email"
                >{sc.author.email}</a
            >
        </li>
    </ul>
</div>

<style>
    div {
        width: fit-content;
        max-width: 550px;
        padding: 1em 2em;
        margin: 0 1em;

        background-color: light-dark(
            var(--ctp-latte-crust),
            var(--ctp-mocha-crust)
        );

        border: 3px var(--accent) solid;
        border-radius: 1em 3em;
    }

    p {
        margin: 10px 0;
        text-align: center;
    }

    img {
        display: block; /* Make the image a block element */
        margin: 0 auto;
    }

    .u-url::after {
        content: none;
    }
</style>
