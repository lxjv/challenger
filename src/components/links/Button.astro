---
const { go, label } = Astro.props;
---

<div>
    <a style="color: var(--text-colour-rev)" href={go}>{label}</a>
</div>
<style>
    div {
        padding: 0.45em 0.85em;
        margin: 1em 0;
        border-radius: 1em 2em;
        background-color: var(--accent);
        color: var(--text-colour-rev) !important;
        width: fit-content;
    }
</style>
