---
interface Props {
    override?: string;
    li: boolean;
    fallback: string;
}

const { override, li, fallback } = Astro.props;

// Initialize list with an empty string or default value
let list: string = "";

// Assign "fa-li" if li is truthy
if (li) {
    list = "fa-li";
}
---

<i class={`${list} ${override || fallback}`}></i>
